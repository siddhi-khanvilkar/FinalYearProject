<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Mentor</title>
  <link rel="stylesheet" href="/chat.css">
</head>
<body>
  <div class="chat-container">
    <h2>Conversation with Teacher</h2>

    <div class="messages">
      {{#if messages.length}}
        {{#each messages}}
          <div class="message {{sender}}">
            <div class="bubble">
              <strong>{{sender}}:</strong> {{message}}
              <div class="timestamp">{{created_at}}</div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>No messages yet.</p>
      {{/if}}
    </div>

    <form action="/sendmessageparent" method="POST" class="message-form">
      <input type="hidden" name="parentName" value="{{parentName}}">
      <input type="hidden" name="studentName" value="{{student_id}}">
      <textarea name="message" placeholder="Type your message..." required></textarea>
      <button type="submit">Send</button>
    </form>

    <a href="/profile" class="back-link">Back to Dashboard</a>
  </div>
</body>
</html>
